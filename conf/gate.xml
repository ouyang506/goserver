<root>
    <!-- 服务注册 -->
    <registry>
		<etcd>
			<endpoints>
				<item>127.0.0.1:2378</item>
				<item>127.0.0.1:2379</item>
				<item>127.0.0.1:2380</item>
			</endpoints>
			<username></username>
			<password></password>
		</etcd>
	</registry>
	<!-- 服务监听 -->
    <listen>
        <ip>127.0.0.1</ip>
        <port>5200</port>
    </listen>
	
	<!-- gate监听客户端 -->
    <outer>
		<outer_ip>127.0.0.1</outer_ip>
        <listen_ip>0.0.0.0</listen_ip>
        <port>5100</port>
    </outer>

    <!-- gate服务转发消息 -->
    <transfer_message>
        <message>
            <message_id_begin>2000</message_id_begin>
            <message_id_end>2999</message_id_end>
            <target_server>2</target_server>
            <description>transfer to game server</description>
        </message>
        <message>
            <message_id_begin>3000</message_id_begin>
            <message_id_end>3999</message_id_end>
            <target_server>3</target_server>
            <target_server>transfer to relation server</target_server>
        </message>
    </transfer_message>
</root>